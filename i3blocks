# global settings
command=~/scripts/i3blocks/$BLOCK_NAME
separator_block_width=15

# mic
[microphone]
interval=once
signal=9

# volume
[volume]
interval=once
signal=8

# battery
[battery]
interval=30

# time + date
[time]
command=date '+%Y-%m-%d %H:%M'
interval=5

