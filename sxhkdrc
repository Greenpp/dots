# Dmenu launcher
super + p
	dmenu_run -i -p "Run: "

# Browser
super + b
    $BROWSER

# Terminal in place
super + Return
    run_in_place st

# Plumber
super + o
    plumber

# SS
{_,shift +} Print
    sleep 0.2; scrot "/tmp/ss-$(date +%F_%T).png" {_,-s} -e 'xclip -selection clipboard -t image/png < $f'
