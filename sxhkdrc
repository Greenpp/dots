# Dmenu launcher
super + p
    rofi -show

# Browser
super + b
    $BROWSER

# Terminal in place
super + Return
    run_in_place st

# Plumber
super + o
    plumber

# SS
{_,shift +} Print
    sleep 0.2; scrot "/tmp/ss-$(date +%F_%T).png" {_,-s} -e 'xclip -selection clipboard -t image/png < $f'

# Volume
super + {KP_Subtract,KP_Add}
    amixer sset Master 1%{-,+} && updatebar

super + shift + KP_Subtract
    amixer sset Master toggle && updatebar

super + shift + KP_Multiply
    amixer sset Capture toggle && updatebar
